{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "experimentalDecorators": true,

    /* Modules */
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  }
}
